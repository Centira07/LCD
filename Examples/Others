#include "LiquidCrystal_I2C.h"
#include "Arduino.h"

LiquidCrystal_I2C lcd(0x27, 16, 2);

setup() {
  Serial.begin(9600);
  lcd.init();
  lcd.backlight();
}

void() {
  lcd.home();
  lcd.noCursor();
  lcd.cursor();
  lcd.blink();
  lcd.noBlink();
  lcd.setCursor(16,0);
  lcd.print(" Hello World!"); //You can write 16 Characters per line
  lcd.scrollDisplayLeft();
  delay(1000);
  lcd.clear();
  lcd.print(" Hello World!"); //You can write 16 Characters per line
  lcd.scrollDisplayRight();
}


